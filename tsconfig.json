{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "bundler", // Required for allowImportingTsExtensions
    "baseUrl": "./src",
    "outDir": "./dist",
    "allowImportingTsExtensions": true, // Allows .tsx imports
    "noEmit": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}