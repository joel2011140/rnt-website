{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node", // Changed from "bundler" to "node" for ts-loader compatibility
    "baseUrl": "./src",
    "outDir": "./dist",
    "allowImportingTsExtensions": true, // Allows .tsx imports
    "declaration": true,
    "emitDeclarationOnly": true,
    "noEmit": false, // Ensures JS output
    "isolatedModules": false // Disable to allow ts-loader to handle module emission
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}